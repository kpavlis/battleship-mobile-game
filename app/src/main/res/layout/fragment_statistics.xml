<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Business_Logic.StatisticsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statistics_activity_title"
        android:textStyle="bold"
        android:textSize="@dimen/statistics_fragment_text_view_title"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>

    <ScrollView
        android:layout_gravity="center"
        android:id="@+id/scroll_statistics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_weight="0.3">

                <ImageView
                    android:layout_width="@dimen/statistics_fragment_image_dimensions"
                    android:layout_height="@dimen/statistics_fragment_image_dimensions"
                    android:src="@drawable/statistics"
                    android:layout_gravity="top|center_horizontal"
                    android:padding="10dp"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/global_statistics_loading_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="220dp"
                android:layout_margin="15dp"
                android:padding="3dp"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="visible"
                android:background="@drawable/statistics_top_players_background">

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="@dimen/game_fragment_progress_bar"
                    android:layout_height="@dimen/game_fragment_progress_bar"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loading_statistics"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/game_fragment_inner_text_view"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/global_statistics_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="15dp"
                android:minHeight="220dp"
                android:padding="3dp"
                android:visibility="gone"
                android:background="@drawable/statistics_top_players_background">

                <TextView
                    android:id="@+id/rank_statistics"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/statistics_top_3_best_quality"
                    android:textSize="@dimen/statistics_fragment_global_statistics_title"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:minLines="2"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="1)"
                        android:width="50dp"
                        android:textSize="@dimen/statistics_fragment_global_statistics_rank"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif-smallcaps"/>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/first_place_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Konstantinos Pavlis"
                                android:textSize="@dimen/statistics_fragment_global_statistics_names"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:fontFamily="sans-serif-smallcaps"/>

                    </HorizontalScrollView>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/first_place_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="80"
                        android:minWidth="50dp"
                        android:textSize="@dimen/statistics_fragment_global_statistics_values"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="@color/green"
                        android:fontFamily="sans-serif-smallcaps"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="2)"
                        android:width="50dp"
                        android:textSize="@dimen/statistics_fragment_global_statistics_rank"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif-smallcaps"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/second_place_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Eleftherios Panou"
                                android:textSize="@dimen/statistics_fragment_global_statistics_names"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:fontFamily="sans-serif-smallcaps"/>

                        </HorizontalScrollView>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/second_place_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="34"
                        android:minWidth="50dp"
                        android:textSize="@dimen/statistics_fragment_global_statistics_values"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="@color/green"
                        android:fontFamily="sans-serif-smallcaps"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="3)"
                        android:width="50dp"
                        android:textSize="@dimen/statistics_fragment_global_statistics_rank"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif-smallcaps"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/third_place_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dimitra Stefanidi"
                                android:textSize="@dimen/statistics_fragment_global_statistics_names"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:fontFamily="sans-serif-smallcaps"/>

                        </HorizontalScrollView>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/third_place_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:minWidth="50dp"
                        android:textSize="@dimen/statistics_fragment_global_statistics_values"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="@color/green"
                        android:fontFamily="sans-serif-smallcaps"/>

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp">

                        <Button
                            android:id="@+id/best_quality_statistics_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/best_quality_v2"
                            android:textSize="@dimen/statistics_fragment_buttons"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:scaleY="0.9"
                            android:scaleX="0.9"
                            android:enabled="false"/>

                        <Button
                            android:id="@+id/wins_statistics_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wins_v2"
                            android:textSize="@dimen/statistics_fragment_buttons"
                            android:layout_weight="1"
                            android:layout_marginStart="1dp"
                            android:layout_marginEnd="1dp"
                            android:scaleY="0.9"
                            android:scaleX="0.9"
                            android:enabled="true"/>

                        <Button
                            android:id="@+id/losses_statistics_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/losses_v2"
                            android:textSize="@dimen/statistics_fragment_buttons"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:scaleY="0.9"
                            android:scaleX="0.9"
                            android:enabled="true"/>

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/statistics_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Konstantinos Pavlis progress page"
                    android:textSize="@dimen/statistics_fragment_text_view_description"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </HorizontalScrollView>


            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginTop="@dimen/statistics_fragment_margins"
                android:layout_marginBottom="@dimen/statistics_fragment_margins">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_games"
                            android:textSize="@dimen/statistics_fragment_inner_text_view"
                            android:textStyle="bold"
                            android:textAlignment="center"/>

                        <TextView
                            android:id="@+id/games"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/statistics_fragment_inner_text_view"
                            android:textStyle="bold"
                            android:text="-"
                            android:layout_marginStart="15dp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/wins"
                                android:textSize="@dimen/statistics_fragment_inner_text_view"
                                android:textStyle="bold"
                                android:textAlignment="center"/>

                            <TextView
                                android:id="@+id/wins"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/statistics_fragment_inner_text_view"
                                android:textStyle="bold"
                                android:text="-"
                                android:layout_marginStart="15dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/losses"
                                android:textSize="@dimen/statistics_fragment_inner_text_view"
                                android:textStyle="bold"
                                android:textAlignment="center"/>

                            <TextView
                                android:id="@+id/losses"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/statistics_fragment_inner_text_view"
                                android:textStyle="bold"
                                android:text="-"
                                android:layout_marginStart="15dp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <View android:layout_width="120dp"
                android:layout_height="2dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:background="?android:attr/listDivider"/>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/statistics_fragment_margins"
                android:layout_marginBottom="@dimen/statistics_fragment_margins">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/best_quality"
                        android:textSize="@dimen/statistics_fragment_inner_text_view"
                        android:textStyle="bold"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/win_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/statistics_fragment_inner_text_view"
                        android:textStyle="bold"
                        android:text="-"
                        android:layout_marginStart="15dp"/>

                </LinearLayout>
            </HorizontalScrollView>

            <View android:layout_width="120dp"
                android:layout_height="2dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:background="?android:attr/listDivider"/>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/statistics_fragment_margins"
                android:layout_marginBottom="@dimen/statistics_fragment_margins">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/level"
                        android:textSize="@dimen/statistics_fragment_inner_text_view"
                        android:textStyle="bold"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/statistics_fragment_inner_text_view"
                        android:textStyle="bold"
                        android:text="-"
                        android:layout_marginStart="15dp"/>

                </LinearLayout>
            </HorizontalScrollView>

            <View android:layout_width="120dp"
                android:layout_height="2dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:background="?android:attr/listDivider"/>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/statistics_fragment_margins"
                android:layout_marginBottom="@dimen/statistics_fragment_margins">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/points"
                        android:textSize="@dimen/statistics_fragment_inner_text_view"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/statistics_fragment_inner_text_view"
                        android:textStyle="bold"
                        android:text="-"
                        android:layout_marginStart="15dp"
                        android:textAlignment="center"/>

                </LinearLayout>
            </HorizontalScrollView>

            <View android:layout_width="120dp"
                android:layout_height="2dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_marginBottom="15dp"
                android:background="?android:attr/listDivider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/points_to_next_level"
                    android:layout_gravity="center"
                    android:textSize="@dimen/statistics_fragment_inner_text_view"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/statistics_fragment_progress_bar_height"
                    android:progress="10"
                    android:max="100"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:progressDrawable="@drawable/custom_progress_bar"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_weight="1"
                        android:textSize="@dimen/statistics_fragment_progress_bar_indicators"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:layout_weight="0.85"
                        android:textSize="@dimen/statistics_fragment_progress_bar_indicators"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textSize="@dimen/statistics_fragment_progress_bar_indicators"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/statistics_progress_bar_explain"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:textAlignment="center"
                    android:textSize="@dimen/statistics_fragment_bottom_information_text_view"/>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>