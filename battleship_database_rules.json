{
  "rules": {
    "Users": {
      ".read": "auth != null",
      "$uid": {
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "Games": {
      ".read": "auth != null",
      "$uid": {
        ".write": "auth.uid === $uid",
        "$sub": {
          ".write": "auth.uid === $uid || (data.exists() && newData.exists())"
        },
        "player_1": {
          ".write": "auth.uid === $uid"
        },
        "is_available": {
          ".write": "auth.uid === $uid"
        }
      }
    }
  }
}